<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
    </style>
    <style name="NoBoldTextAppearance">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:backgroundTint">#F0F0F0</item>
    </style>
    <style name="AppTheme.SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">#979797</item>
        <item name="background">@color/btnligght</item>
        <item name="android:textColorPrimary">#2B2B2B</item>
        <item name="android:textColorSecondary">#0087D7</item>
        <item name="android:colorControlNormal">#FF0000</item>
        <item name="android:colorControlActivated">#0088D9</item>
        <item name="android:colorControlHighlight">#1000FF</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">#D5ECFF</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Установка фона для диалогового окна -->
        <item name="android:windowBackground">@color/white</item> <!-- Замените на ваш ресурс -->
    </style>

    <style name="DropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/btnligght</item>
        <item name="hintTextColor">@color/btnligght</item>
        <item name="endIconTint">@color/btnligght</item>
        <item name="android:textColorPrimary">#ABDAFF</item>
        <item name="android:colorPrimary">#ABDAFF</item>
        <item name="android:colorSecondary">#ABDAFF</item>
        <item name="android:popupBackground">#ABDAFF</item>
        <item name="android:textColor">@color/btnligght</item>
    </style>
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>